<h2>メモ編集</h2>
  <form method="post" action="/memos/<%= params[:id] %>">
    <label>タイトル</label>
    <input type= "text" name="title" value="<%= h(@memo[1]) %>">
    <label>内容</label>
    <textarea name="content"><%= h(@memo[2]) %></textarea>
    <input type="hidden" name="_method" value="patch">
    <input type= "submit" value="保存">
</form>
